<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.CCDroid.Details" parent="None"/>

    <style name="Widget.CCDroid.Details.Container">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/size5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Widget.CCDroid.Details.Key">
        <item name="android:textColor">@color/font_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.CCDroid.Details.Value">
        <item name="android:textColor">@color/font_color</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
